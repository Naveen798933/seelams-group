{
  "name": "seelam-group-website",
  "version": "2.0.0",
  "description": "SEELAM GROUP - Structural Design & Approvals Website",
  "private": true,
  "scripts": {
    "dev": "vite --port 3000 --host",
    "build": "vite build",
    "preview": "vite preview --port 3000",
    "lint": "eslint \"src/**/*.{js,mjs}\"",
    "lint:fix": "eslint \"src/**/*.{js,mjs}\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "format": "prettier --write \"src/**/*.{js,css,html}\"",
    "format:check": "prettier --check \"src/**/*.{js,css,html}\"",
    "optimize:images": "sharp -i src/assets/images/**/*.{jpg,jpeg,png,webp} -o dist/assets/images --resize 1920 --format webp --quality 80",
    "generate:icons": "pwa-asset-generator public/icon.png public/icons -i public/index.html -m public/manifest.json --dark-mode --opaque false --padding 0",
    "analyze": "webpack-bundle-analyzer dist/stats.json",
    "deploy:staging": "npm run build && rsync -avz --delete dist/ user@staging.seelamgroup.com:/var/www/staging/",
    "deploy:production": "npm run build && rsync -avz --delete dist/ user@seelamgroup.com:/var/www/production/",
    "security:audit": "npm audit --audit-level=high",
    "security:outdated": "npm outdated",
    "backup": "tar -czf backup-$(date +%Y%m%d).tar.gz src/ api/ config/",
    "docker:build": "docker build -t seelam-group-website .",
    "docker:run": "docker run -p 3000:80 seelam-group-website"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "bootstrap": "^5.3.2",
    "chart.js": "^4.4.0",
    "font-awesome": "^4.7.0",
    "intersection-observer": "^0.12.2",
    "lazysizes": "^5.3.2",
    "swiper": "^10.3.1",
    "three": "^0.182.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.5",
    "@babel/preset-env": "^7.23.5",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/user-event": "^14.5.1",
    "autoprefixer": "^10.4.16",
    "babel-jest": "^29.7.0",
    "clean-css-cli": "^5.6.3",
    "cssnano": "^6.0.1",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "html-minifier-terser": "^7.2.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.31",
    "prettier": "^3.1.0",
    "pwa-asset-generator": "^6.3.1",
    "sharp": "^0.33.1",
    "terser": "^5.23.0",
    "vite": "^5.0.0",
    "webpack": "^5.89.0",
    "webpack-bundle-analyzer": "^4.9.1",
    "workbox-webpack-plugin": "^7.0.0"
  },
  "browserslist": [
    "> 0.5%",
    "last 2 versions",
    "not dead",
    "not IE 11"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/seelamgroup/website.git"
  },
  "keywords": [
    "structural-engineering",
    "construction",
    "approvals",
    "india",
    "professional-services"
  ],
  "author": "SEELAM GROUP",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/seelamgroup/website/issues"
  },
  "homepage": "https://seelamgroup.com"
}
